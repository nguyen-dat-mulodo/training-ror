<% @title = 'My Homepage' %>

<%= form_for :session, url: login_path do |f| %>
  <div class="field">
    <%= f.label :name, 'Username' %>
    <%= f.text_field :name, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password, :size => 40 %>
  </div>
  <div class="actions">
    <%= f.submit 'Login'%>
  </div>
<% end %>


